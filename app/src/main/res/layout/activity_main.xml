<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/rtmpUrlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="rtmp://10.0.2.2:1935/live/stream"
        android:inputType="textUri" />

    <RadioGroup
        android:id="@+id/cameraSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/frontCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front Camera" />

        <RadioButton
            android:id="@+id/backCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Back Camera" />
    </RadioGroup>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/injectionToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Enable Injection" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Status: Disconnected"
        android:textSize="16sp" />

    <SurfaceView
        android:id="@+id/previewSurface"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Connect to Stream" />

</LinearLayout>
