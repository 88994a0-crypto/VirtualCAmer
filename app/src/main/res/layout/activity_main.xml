<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VirtualCAmer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inject RTMP stream as virtual camera"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:alpha="0.7" />

        <!-- Injection Toggle -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/injectionToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Injection"
            android:textSize="16sp"
            android:padding="12dp" />

        <!-- RTMP URL Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RTMP Stream URL"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/rtmpUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="rtmp://example.com/live/stream"
            android:inputType="textUri"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Camera Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Camera"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <RadioGroup
            android:id="@+id/cameraSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/backCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back Camera"
                android:checked="true" />

            <RadioButton
                android:id="@+id/frontCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Front Camera" />
        </RadioGroup>

        <!-- App Selector -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Apps"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/selectAppsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Apps"
            style="?android:attr/buttonBarButtonStyle" />

        <TextView
            android:id="@+id/selectedAppsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All apps (default)"
            android:textSize="12sp"
            android:alpha="0.7"
            android:paddingTop="4dp"
            android:paddingBottom="8dp" />

        <!-- Connect Button -->
        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Settings"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:padding="16dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Not connected"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Preview Surface -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stream Preview"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <SurfaceView
            android:id="@+id/previewSurface"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#000000" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Instructions:\n1. Enable injection toggle\n2. Enter your RTMP URL\n3. Select target camera\n4. Choose which apps to inject (optional)\n5. Tap 'Apply Settings'\n6. Open target app and use camera\n\nðŸ“± Compatible with: Camera app, Chrome, and most camera apps\nðŸ”„ Restart target apps after changing settings"
            android:textSize="12sp"
            android:alpha="0.6"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>
</ScrollView>
